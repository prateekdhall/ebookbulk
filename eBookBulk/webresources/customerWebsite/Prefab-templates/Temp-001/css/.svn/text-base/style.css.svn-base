@charset "utf-8";
/* CSS Document */
* {
	margin:0;
	padding:0
}
body, html {
	width:100%;
	height:100%;
	font-family:arial;
	font-size:12px;
	color:#000;
}
img {
	border:0px;
	color:#FFF;
}
a {
	text-decoration:none;
}
h1 {
	font-size:15px;
	color:#000;
	font-weight:bold;
	margin:0 0 6px 0;
	padding:0;
	text-transform:uppercase
}
.mandatory {
	color:#F00;
}
p {
	font-size:12px;
	line-height:20px;
	margin-bottom:6px;
}
h2 {
	font-size:13px;
	color:#000;
	font-weight:bold;
	margin:0 0 6px 0;
	padding:0;
	text-transform:uppercase
}
.wrapper {
	width:920px;
	background-color:#EBEECC;
	margin:0px auto;
	position:relative;
}
#header {
	background:url('../images/headerpx.png') repeat-x scroll 0 0 #F0EDCE;
	height: 115px;
	margin-bottom: 5px;
	padding: 3px;
	position: absolute;
	width: 916px;
}
.logo {
	position:absolute;
	margin:8px 10px;
	left:0px;
	top: 17px;
}
.logo h1 {
	font-size:23px!important;
	margin:0 0 6px 0;
}
.logo-icon {
	position:absolute;
	width:150px;
	left:120px;
	margin:8px 10px;
}
.register {
	background: none repeat scroll 0 0 #EBEECC;
	border: 3px solid #DFCA99;
	min-height:402px;
	padding: 8px;
	position: absolute;
	right: 0;
	top: 135px;
	width: 225px;
	height:auto !important;
}
.tradingprice {
	border: 3px solid #DFCA99;
	min-height: 200px;
	height:auto !important;
	padding: 8px;
	position: absolute;
	top: 135px;
	width: 645px;
}
#bookCover {
	border:1px solid #ccc;
	padding:4px;
	width:100px;
	height:155px;
	float:left;
	margin:0 15px 10px 0;
	background-color:#FFF;
}
select {
	margin-bottom:15px;
	width:221px;
	font-size:11px;
	border:1px solid #DFCA99
}
input[type=text] {
	margin-bottom:6px;
	min-width:220px;
	border:1px solid #DFCA99
}
.button {
	padding:3px 9px;
	font-size:11px;
	color:#fff;
	background:none;
	border:none;
	background:#D9D080;
	background: -moz-linear-gradient(top, #F0EDCE 0%, #E7DAB8 16%, #DFCA99 29%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #F0EDCE), color-stop(16%, #E7DAB8), color-stop(29%, #DFCA99));
	background: -webkit-linear-gradient(top, #F0EDCE 0%, #E7DAB8 16%, #DFCA99 29%);
	background: -o-linear-gradient(top, #87e0fd 0%, #53cbf1 16%, #05abe0 29%);
	background: -ms-linear-gradient(top, #F0EDCE 0%, #E7DAB8 16%, #DFCA99 29%);
	background: linear-gradient(top, #87e0fd 0%, #53cbf1 16%, #05abe0 29%);
	margin: 5px 0 1px;
	cursor:pointer
}
.review {
	border: 3px solid #DFCA99;
	min-height: 172px;
	margin-right: 5px;
	padding: 8px;
	position: absolute;
	top: 365px;
	width: 317px;
	height:auto !important;
}
.author-info {
	border: 3px solid #DFCA99;
	min-height: 172px;
	height:auto !important;
	left:347px;
	margin-bottom: 5px;
	padding: 8px;
	position: absolute;
	top: 365px;
	width: 299px;
}
#footer {
	position:absolute;
	top:568px;
	width:914px;
	margin:0 auto;
	text-align:center;
	background:#EBEECC;
	border:3px solid #DFCA99;
	min-height:25px;
	vertical-align:middle;
	height:auto !important;
}
