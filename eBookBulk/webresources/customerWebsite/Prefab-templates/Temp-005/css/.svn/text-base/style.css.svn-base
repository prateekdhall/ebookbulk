@charset "utf-8";
/* CSS Document */
*{margin:0px; padding:0px}body, html{ width:100%; height:100%; font-family: "Myriad Pro", arial; font-size:13px; color:#000; }
img{ border:0px; color:#FFF;} a{text-decoration:none; display:block;  text-transform:uppercase;} h1{font-size:17px;color:#000;font-weight:bold;margin:0 0 6px 0;padding:0;text-transform:uppercase} .mandatory{color:#F00;} #back{width:91px; color:#000 !important; padding:8px 0 6px 31px;font-weight: bold;}p{font-size:12px;line-height:20px;margin-bottom:6px;} 
h2{font-size:15px;color:#000;font-weight:bold;margin:0 0 6px 0;padding:0;text-transform:uppercase}
.wrapper{ width:920px; background-color:#FFF;margin:0px auto; position:relative;}
#header{background:url('../images/header.png')  no-repeat 0 0 #FFF; border: 3px solid #DFCA99; height: 115px;margin-bottom: 5px; padding: 3px; position: absolute; width: 909px;} .logo{position:absolute;margin:8px 10px;left:0px;top: 17px;} .logo h1{ font-size:23px;!important;margin:0 0 6px 0;} .logo-icon{position:absolute;width:150px;left:120px;margin:8px 10px;}
.register{ background: none repeat scroll 0 0 #FFF; border: 3px solid #DFCA99; min-height:427px; padding: 8px; position: absolute;
    right: 0; top: 135px;  width: 358px;height:auto !important;}
.tradingprice{ background: none repeat scroll 0 0 #FFF; border: 3px solid #DFCA99; min-height: 215px; height:auto !important; padding: 8px; position: absolute; top:343px;  width: 899px;}
#bookCover{border:1px solid #ccc; padding:4px;width:100px;height:155px;float:left;margin:0 15px 10px 0; background-color:#FFF;}
select{margin-bottom:15px;width:340px;font-size:11px; border:1px solid #DFCA99} input[type=text]{margin-bottom:9px;min-width:337px; border:1px solid #DFCA99} #download{ margin-left:1px; color:#000 !important; padding: 8px 0 6px 18px;font-weight: bold;}
.button{padding:3px 9px;margin: 5px 0 1px;font-size:11px;color:#fff;border:none;background: linear-gradient(top,  #87e0fd 0%,#53cbf1 16%,#05abe0 29%); background:#E7DAB8;background: -moz-linear-gradient(top,  #FFF 0%, #E7DAB8 16%, #DFCA99 29%); background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#FFF), color-stop(16%,#E7DAB8), color-stop(29%,#DFCA99)); background: -webkit-linear-gradient(top,  #FFF 0%,#E7DAB8 16%,#DFCA99 29%); background: -o-linear-gradient(top,  #87e0fd 0%,#53cbf1 16%,#05abe0 29%); background: -ms-linear-gradient(top,  #FFF 0%,#E7DAB8 16%,#DFCA99 29%);}
.review{background: none repeat scroll 0 0 #FFF;border: 3px solid #DFCA99;min-height: 427px;margin-right: 5px;padding: 8px;position: absolute;top:135px; width: 511px;height:auto !important;}
.author-info{ background: none repeat scroll 0 0 #FFF; border: 3px solid #DFCA99;min-height: 172px; height:auto !important; margin-bottom: 5px; padding: 8px;  position: absolute; top:135px; width: 899px;}
#footer{position:absolute;top:595px;width:916px;margin:0 auto;text-align:center;background:#FFF; border:3px solid #DFCA99; min-height:25px;vertical-align:middle;height:auto !important;}

